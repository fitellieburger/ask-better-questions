{
  "manifest_version": 3,
  "name": "Ask Better Questions",
  "version": "1.0",
  "description": "Analyze any news article with critical-thinking questions.",
  "action": {
    "default_icon": {
      "48": "icon-48.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://*/*",
    "http://localhost/*"
  ]
}
