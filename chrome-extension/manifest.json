{
  "manifest_version": 3,
  "name": "Ask Better Questions",
  "version": "1.0",
  "description": "Analyze any news article with critical-thinking questions.",
  "action": {
    "icons": {
  "16": "icons/16.png",
  "32": "icons/32.png",
  "48": "icons/48.png",
  "128": "icons/128.png"
}
  },
  
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": [
    "https://*/*",
    "http://localhost/*"
  ]
}
